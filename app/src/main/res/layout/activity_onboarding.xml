<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="4dp"
    tools:context=".OnBoardingActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewCard"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/card" />

    <ImageView
        android:id="@+id/imageViewShadow"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/imageViewCard"
        android:layout_marginTop="-30dp"
        android:src="@drawable/shadows" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewShadow"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/winterpoppins"
            android:text="@string/just_design_nyour_own_card"
            android:textAlignment="textStart"
            android:textColor="@color/textHeader1"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView_skip"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="18dp"
            android:text="@string/you_can_create"
            android:textColor="@color/textHeader1"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/skip"
            android:contentDescription="@string/skip_the_on_boarding_process_imagebutton" />

    </RelativeLayout>
</RelativeLayout>